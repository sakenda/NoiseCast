                               TextWrapping="Wrap"
                               FontSize="18"/>
                </ScrollViewer>
            </Grid>

            <ListView Grid.Row="2" Grid.ColumnSpan="3">
                <ListViewItem Content="test1"/>
                <ListViewItem Content="test2"/>
                <ListViewItem Content="test3"/>
                <ListViewItem Content="test4"/>
            </ListView>
        </Grid>
    </Grid>
</UserControl>