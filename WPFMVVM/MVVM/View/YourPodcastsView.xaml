<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFMVVM.MVVM.View"
             x:Class="WPFMVVM.MVVM.View.YourPodcastsView"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Background="White"
             FontFamily="{StaticResource BarlowRegular}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding Width, ElementName=lb_podcastList}"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- PodcastList -->
        <ListBox Grid.Column="0"
                 x:Name="lb_podcastList"
                 ItemsSource="{Binding PodcastList}"
                 Width="230"
                 BorderThickness="0">
            <ListBoxItem>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="80" Height="80"
                                Background="{StaticResource NaNGradient}">
                            <Border.Clip>
                                <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,80,80"/>
                            </Border.Clip>
                            <Image Width="80"
                                   Height="80"
                                   Source="/Images/lage.png"/>
                        </Border>

                        <StackPanel Orientation="Vertical" Margin="10 0 0 0">
                            <TextBlock Text="Lage der Nation"
                                       FontFamily="{StaticResource BarlowSemiBold}"
                                       FontSize="16"/>
                            <TextBlock Text="kuechenstud.io"
                                       FontFamily="{StaticResource BarlowRegular}"
                                       FontSize="14"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="2 hrs ago"
                               FontFamily="{StaticResource BarlowSemiBold}"
                               FontSize="14"
                               Foreground="{StaticResource DarkFont3}"
                               VerticalAlignment="Bottom"
                               Margin="90 0 0 0"/>
                </Grid>
            </ListBoxItem>

            <ListBoxItem>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="80" Height="80"
                                Background="{StaticResource NaNGradient}">
                            <Border.Clip>
                                <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,80,80"/>
                            </Border.Clip>
                            <Image Width="80"
                                   Height="80"
                                   Source="/Images/hooked.jpg"/>
                        </Border>

                        <StackPanel Orientation="Vertical" Margin="10 0 0 0">
                            <TextBlock Text="Hooked"
                                       FontFamily="{StaticResource BarlowSemiBold}"
                                       FontSize="16"/>
                            <TextBlock Text="Hooked"
                                       FontFamily="{StaticResource BarlowRegular}"
                                       FontSize="14"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="1 days ago"
                               FontFamily="{StaticResource BarlowSemiBold}"
                               FontSize="14"
                               Foreground="{StaticResource DarkFont3}"
                               VerticalAlignment="Bottom"
                               Margin="90 0 0 0"/>
                </Grid>
            </ListBoxItem>

            <ListBoxItem>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="80" Height="80"
                                Background="{StaticResource NaNGradient}">
                            <Border.Clip>
                                <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,80,80"/>
                            </Border.Clip>
                            <Image Width="80"
                                   Height="80"
                                   Source="/Images/stay.jpg"/>
                        </Border>

                        <StackPanel Orientation="Vertical" Margin="10 0 0 0">
                            <TextBlock Text="Stay Forever"
                                       FontFamily="{StaticResource BarlowSemiBold}"
                                       FontSize="16"/>
                            <TextBlock Text="Stay Forever"
                                       FontFamily="{StaticResource BarlowRegular}"
                                       FontSize="14"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="1 week ago"
                               FontFamily="{StaticResource BarlowSemiBold}"
                               FontSize="14"
                               Foreground="{StaticResource DarkFont3}"
                               VerticalAlignment="Bottom"
                               Margin="90 0 0 0"/>
                </Grid>
            </ListBoxItem>
        </ListBox>

        <Rectangle Grid.Column="1" Fill="{StaticResource DarkFont2}"
                   Width="1" Margin="10 0"/>

        <!-- Podcast Detail -->
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding Width, ElementName=b_podcast}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="{Binding ElementName=btn_unsub, Path=Width}"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Podcast image -->
            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="4"
                    x:Name="b_podcast"
                    Width="120" Height="120"
                    Background="{StaticResource NaNGradient}"
                    VerticalAlignment="Top">
                <Border.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,120,120"/>
                </Border.Clip>
                <Image Width="{Binding Width, ElementName=b_podcast}"
                           Height="{Binding Width, ElementName=b_podcast}"
                           Source="/Images/lage.png"/>
            </Border>

            <!-- Podcast Info -->
            <StackPanel Grid.Row="0" Grid.Column="1"
                        Orientation="Vertical"
                        Height="{Binding Height, ElementName=b_podcast}"
                        Margin="10 0 0 0">

                <TextBlock Text="Die Lage der Nation"
                           FontFamily="{StaticResource BarlowBold}"
                           FontSize="28"/>
                <TextBlock Text="kuechenstud.io"
                           FontFamily="{StaticResource BarlowSemiBold}"
                           FontSize="20"/>
                <TextBlock FontFamily="{StaticResource BarlowRegular}"
                           FontSize="18">
                    <Hyperlink NavigateUri="www.lagedernation.de">
                        <TextBlock Text="lagedernation.de"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>

            <!-- Episodes / Played tracker -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Bottom"
                        Margin="10 0 0 0">
                <TextBlock Text="121 episodes"
                           Foreground="{StaticResource DarkFont3}"
                           FontFamily="{StaticResource BarlowSemiBold}"
                           FontSize="16"
                           Margin="0 0 30 0"/>
                <TextBlock Text="44 played"
                           Foreground="{StaticResource DarkFont3}"
                           FontFamily="{StaticResource BarlowSemiBold}"
                           FontSize="16"/>
            </StackPanel>

            <!-- Unsubscribe Button -->
            <Button Grid.Column="2"
                    Content="Unsubscribe"
                    x:Name="btn_unsub"
                    Style="{StaticResource UnsubButton}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"/>

            <!-- Podcast Beschreibung -->
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                   Margin="0 10" MaxHeight="90">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                    <TextBlock Text="Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren die Lage der Nation. Jede Woche lassen Philip Banse und Ulf Buermeyer die politische Woche Revue passieren und kommentieren 