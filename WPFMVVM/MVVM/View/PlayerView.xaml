<UserControl x:Class="WPFMVVM.MVVM.View.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFMVVM.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="700"
             Width="280"
             FontFamily="{StaticResource BarlowRegular}"
             x:Name="main">
    <Grid Margin="5 0 5 10">

        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding ElementName=main, Path=ActualWidth}"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="{Binding ElementName=sp_player, Path=Height}"/>
        </Grid.RowDefinitions>

        <!-- Podcast/Episode Image -->
        <Border Grid.Row="0" Background="{StaticResource NaNGradient}">
            <Border.Clip>
                <RectangleGeometry RadiusX="10"
                                   RadiusY="10"
                                   Rect="0,0,270,270"/>
            </Border.Clip>

            <Image Source="/Images/lage.png" Margin="0 -10 0 0"/>
        </Border>

        <!-- EpisodeInfo's -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Hidden" Margin="0 0 0 0">
            <StackPanel Grid.Row="1"
                        x:Name="sp_episodeInfo"
                        Orientation="Vertical">
                <TextBlock Text="Lage der Nation - der Politik-Podcast aus Berlin"
                           FontSize="16"
                           Width="{Binding ElementName=main, Path=ActualWidth}"
                           FontFamily="{StaticResource BarlowSemiBold}"
                           Foreground="{StaticResource DarkFont2}"
                           Margin="0 5"/>
                <TextBlock Text="Spahns Spenden-Dinner, Ukraine-Konflikt, Brückenlockdown und Pilotprojekte, K-Frage in der Union, digitaler Impfausweis"
                           TextWrapping="WrapWithOverflow"
                           FontSize="24"
                           Width="{Binding ElementName=main, Path=ActualWidth}"
                           Foreground="{StaticResource DarkFont1}"
                           Margin="0 5"/>
                <TextBlock Text="Begrüßung Website Lage Plus MapAlarmNG for Mac Beta Testing (kicks-apps.com) Corona-Lage Kai Kupferschmidt (twitter) Yes, we can! Warum wir die Pandemie in den Griff bekommen werden – und zwar sehr bald (STERN PLUS) Föderale Fairness: 8-Punkte-Plan für gleichwertige Lebensverhältnisse bis 2025 (Fraktion DIE LINKE. im Bundestag) Buchungsboom für Mallorca: Bundesregierung prüft Verbot von Auslandsurlaub (FAZ.NET) Kritik an Datenschutz: Bitkom fordert Zwangsnutzung von Corona-Apps – (Golem.de) Bitkom zu den Ergebnissen des Corona-Gipfels (Bitkom e.V.) Kritik an Polizeieinsatz bei Corona-Demo (Süddeutsche.de) Verheerendes Signal (Süddeutsche.de) Jakob Schlandt (twitter)"
                           TextWrapping="WrapWithOverflow"
                           Width="{Binding ElementName=main, Path=ActualWidth}"
                           FontSize="14"
                           Foreground="{StaticResource DarkFont1}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- PlayerControls -->
        <StackPanel Grid.Row="3"
                    x:Name="sp_player"
                    Height="155"
                    Orientation="Vertical">

            <MediaElement Name="me_player" LoadedBehavior="Manual"/>

            <!-- Playback Position -->
            <StackPanel Orientation="Vertical" Margin="0 10">
                <Slider Name="sli_progress" Style="{StaticResource Horizontal_Slider}"
                        Thumb.DragStarted="sliProgress_DragStarted"
                        Thumb.DragCompleted="sliProgress_DragCompleted"
                        ValueChanged="sliProgress_ValueChanged"/>
                <Grid Margin="10 0">
                    <TextBlock Name="tbl_progressStatus"
                               Text="00:00"
                               Foreground="{StaticResource DarkFont2}"
                               FontSize="14"
                               HorizontalAlignment="Left"/>
                    <TextBlock Name="tbl_totalStatus"
                               Text="00:00"
                               Foreground="{StaticResource DarkFont2}"
                               FontSize="14"
                               HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <!-- Control -->
            <Grid HorizontalAlignment="Stretch" Margin="0 0 0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Command=""
                        Content="&#xf2ea;"
                        Style="{StaticResource PlayerButton}"
                        FontSize="20"/>
                <Button Grid.Column="1"
                        Command=""
                        Content="&#xf04a;"
                        Style="{StaticResource PlayerButton}"
                        FontSize="40"/>
                <Button Grid.Column="2"
                        Command=""
                        Content="&#xf144;"
                        Style="{StaticResource PlayerButton}"
                        FontSize="54"/>
                <Button Grid.Column="3"
                        Command=""
                        Content="&#xf04e;"
                        Style="{StaticResource PlayerButton}"
                        FontSize="40"/>
                <Button Grid.Column="4"
                        Command=""
                        Content="&#xf2f9;"
                        Style="{StaticResource PlayerButton}"
                        FontSize="20"/>
            </Grid>

            <!-- Volume -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="&#xf028;"
                        Style="{StaticResource PlayerButton}"
                        Margin="0 0 15 0"/>
                <Slider Name="pb_volume"
                        Style="{StaticResource Horizontal_Slider}"
                        Width="200"
                        Maximum="1"
                        Value="{Binding ElementName=me_player, Path=Volume}"
                        VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>